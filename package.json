{
  "name": "nativefill",
  "version": "2.1.0",
  "private": true,
  "type": "module",
  "description": "NativeFill â€” open-source, privacy-first form autofill (multi-browser, WASM fuzzy, Biome-only).",
  "scripts": {
    "dev:chrome": "wxt dev -b chrome",
    "dev:edge": "wxt dev -b edge",
    "dev:firefox": "wxt dev -b firefox",
    "dev:safari": "wxt dev -b safari",
    "build:chrome": "wxt build -b chrome --mv3",
    "build:edge": "wxt build -b edge --mv3",
    "build:firefox": "wxt build -b firefox",
    "build:safari": "wxt build -b safari",
    "build:all": "bun run build:chrome && bun run build:edge && bun run build:firefox && bun run build:safari",
    "pack:ff": "web-ext build -s .output/firefox-mv2 -a artifacts --overwrite-dest",
    "check": "biome check .",
    "format": "biome format --write .",
    "lint": "biome lint .",
    "test:install": "playwright install --with-deps",
    "test:unit": "vitest run tests/unit",
    "test:integration": "vitest run tests/integration",
    "test:e2e": "playwright test",
    "test": "bun run test:unit && bun run test:integration && bun run test:e2e",
    "dev:harness": "vite",
    "build:harness": "vite build",
    "prepare": "husky"
  },
  "dependencies": {
    "webextension-polyfill": "*"
  },
  "devDependencies": {
    "@playwright/test": "*",
    "@types/webextension-polyfill": "*",
    "biome": "*",
    "http-server": "^14.1.1",
    "husky": "*",
    "jsdom": "^27.1.0",
    "playwright": "*",
    "typescript": "*",
    "vite": "*",
    "vitest": "*",
    "wabt": "*",
    "web-ext": "*",
    "wxt": "*",
    "zod": "^4.1.12"
  }
}
